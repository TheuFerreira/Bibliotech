<Window x:Class="Bibliotech.UserControls.CustomDialog.QuestionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bibliotech.UserControls.CustomDialog"
             mc:Ignorable="d" 
             AllowsTransparency="True"
            Background="Transparent"
            WindowStartupLocation="CenterScreen"
            WindowStyle="None"
            ShowInTaskbar="True"
            Icon="/Bibliotech;component/Resources/ico_bibliotech.ico"
            ResizeMode="NoResize"
            Height="245" Width="420">
    <Border
        CornerRadius="35"
        Background="White"
        Margin="10">

        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>

            <Image
                x:Name="img"
                Height="65"
                Margin="0,15,0,0"
                Source="/Bibliotech;component/Resources/img_question.png"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            </Image>

            <TextBlock
                x:Name="tbTitle"
                Text="TÍTULO"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="20"
                Margin="0,90,0,0"/>

            <TextBlock
                x:Name="tbDescription"
                Text="DESCRIÇÃO"
                FontSize="16"
                VerticalAlignment="Center"
                Margin="30,75,30,0"
                TextAlignment="Center"
                Height="55" 
                TextWrapping="WrapWithOverflow"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button
                    Click="ButtonCancel_Click"
                    Grid.Column="0"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource CancelSolidColor}"
                    Foreground="Black"
                    Height="45">

                    <Button.Content>
                        <TextBlock
                            Text="CANCELAR"
                            FontSize="20"/>
                    </Button.Content>

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                                            x:Name="bd"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="0,0,0,35">

                                            <ContentPresenter 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button
                    Click="ButtonConfirm_Click"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource ErrorSolidColor}"
                    Foreground="White"
                    Height="45">

                    <Button.Content>
                        <TextBlock
                            Text="CONFIRMAR"
                            FontSize="20"/>
                    </Button.Content>

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                                            x:Name="bd"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="0,0,35,0">

                                            <ContentPresenter 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>

    </Border>
</Window>

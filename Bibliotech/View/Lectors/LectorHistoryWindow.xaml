<Window x:Class="Bibliotech.View.Lectors.LectorHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotech.View.Lectors"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:Bibliotech.UserControls"
        WindowStartupLocation="CenterScreen"
        Icon="/Bibliotech;component/Resources/ico_bibliotech.ico"
        Title="Histórico" Height="720" Width="1280">
    <Grid>

        <uc:SearchField
            x:Name="searchField"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Placeholder="PESQUISAR LIVROS"
            VerticalAlignment="Top"
            Width="350"/>

        <DataGrid
            x:Name="dataGrid"
            Margin="0,87,0,0"
            ItemsSource="{Binding}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="" Width="50" Binding="{Binding Path=status}"/>
                <DataGridTextColumn Header="TÍTULO" Width="*" Binding="{Binding Path=title}"/>
                <DataGridTextColumn Header="EXEMPLAR" Width="100" Binding="{Binding Path=id_exemplary}"/>
                <DataGridTextColumn Header="EMPRÉSITMO" Width="200" Binding="{Binding Path=loan_date}"/>
                <DataGridTextColumn Header="DEVOLUÇÃO" Width="200" Binding="{Binding Path=return_date1}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>

<Window x:Class="Bibliotech.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotech"
        xmlns:ctrl="clr-namespace:Bibliotech.UserControls"
        mc:Ignorable="d"
        Icon="/Bibliotech;component/Resources/ico_bibliotech.ico"
        Title="Bibliotech" Height="720" Width="1280" Loaded="Window_Loaded">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock 
            x:Name="tbText"
            Foreground="{StaticResource NormalSolidColor}"
            FontSize="18"
            Text="BEM VINDO, DUANNE BOMFIM"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ctrl:ButtonImage 
                Grid.Column="0"
                Text="LEITOR"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_lectors.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <ctrl:ButtonImage 
                Grid.Column="1"
                Text="EMPRÉSTIMO"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_lendings.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <ctrl:ButtonImage 
                Grid.Column="2"
                Text="DEVOLUÇÃO"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_devolutions.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <ctrl:ButtonImage 
                Grid.Column="3"
                Text="LIVROS"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_books.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ctrl:ButtonImage 
                Grid.Column="0"
                Text="USUÁRIOS"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_users.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <ctrl:ButtonImage 
                Grid.Column="1"
                Text="MANUAL"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_manual.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <ctrl:ButtonImage 
                Grid.Column="2"
                Text="RELATÓRIOS"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_reports.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="3">
            <ctrl:ButtonImage 
                Grid.Column="0"
                Text="ESCOLAS"
                HasBorder="False"
                Source="/Bibliotech;component/Resources/img_schools.png"
                Width="140"
                Height="110"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <ctrl:Button
                Source="/Bibliotech;component/Resources/img_exit.png"
                Text="SAIR"
                FontSize="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="10"
                Height="35"
                CornerRadius="20"
                Width="125"/>
        </Grid>

        <Grid 
            Grid.Row="4"
            Background="{StaticResource BackgroundSolidColor}">

            <StackPanel 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                
                <TextBlock 
                    VerticalAlignment="Center"
                    Foreground="{StaticResource NormalSolidColor}" 
                    Text="PREFEITURA MUNICIPAL DE VIRGINÓPOLIS"/>

                <Image
                    Source="/Bibliotech;component/Resources/img_logo_vgp.png"
                    Margin="5,0"
                    Height="35"
                    Width="35"/>

                <TextBlock 
                    VerticalAlignment="Center"
                    Foreground="{StaticResource NormalSolidColor}" 
                    Text="SECRETARIA MUNICIPAL DE EDUCAÇÃO"/>
            </StackPanel>
            
        </Grid>
        
    </Grid>
</Window>

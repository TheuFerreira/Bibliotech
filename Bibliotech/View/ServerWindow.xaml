<Window x:Class="Bibliotech.View.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotech.View"
        xmlns:uc="clr-namespace:Bibliotech.UserControls"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded"
        Icon="/Bibliotech;component/Resources/ico_bibliotech.ico"
        Title="ServerWindow" Height="350" Width="600" ResizeMode="NoResize">

    <Border
        Background="White"
        CornerRadius="35">

        <Grid>

            <Border 
                Height="40"
                CornerRadius="35,35,0,0"
                Background="{StaticResource BarSolidColor}"
                VerticalAlignment="Top">

                <Grid>
                    <Image 
                        Margin="15,3,3,3"
                        HorizontalAlignment="Left"
                        Source="/Bibliotech;component/Resources/ico_bibliotech.ico"/>

                    <Button 
                        x:Name="btnClose"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top" 
                        Width="50" 
                        Height="40"
                        Click="BtnClose_Click"
                        Style="{StaticResource BtnClose}"/>
                </Grid>
                
            </Border>
            
            <StackPanel
                Margin="20,60,20,20"
                VerticalAlignment="Top">

                <uc:TextField
                    x:Name="tfServer"
                    Margin="0,5"
                    Title="SERVIDOR:*"
                    Placeholder="DNS.192.168.0.1"
                    MaxLength="100"/>

                <Grid 
                    Margin="0,5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <uc:TextField 
                        x:Name="tfPort"
                        Title="PORTA:*"
                        Placeholder="3306"
                        Margin="0,0,5,0"
                        Grid.Column="0"
                        MaxLength="5"/>

                    <uc:TextField
                        x:Name="tfDatabase"
                        Title="BANCO:*"
                        Placeholder="BANCO_BIBLIOTECH"
                        Margin="5,0,0,0"
                        Grid.Column="1"
                        MaxLength="50"/>
                </Grid>

                <uc:TextField
                    x:Name="tfUser"
                    Title="USUÁRIO:*"
                    Placeholder="EXEMPLO"
                    Margin="0,5"
                    MaxLength="25"/>
                
                <uc:TextField
                    x:Name="tfPassword"
                    Title="SENHA:*"
                    Placeholder="*****"
                    Margin="0,5"
                    MaxLength="25"/>
            </StackPanel>

            <Grid 
                VerticalAlignment="Bottom">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="btnTestConnection"
                    Grid.Column="0"
                    Background="{StaticResource BackgroundSolidColor}" 
                    Click="BtnTestConnection_Click" >

                    <Button.Style>
                        <Style  TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            CornerRadius="0,0,0,35"
                                            Background="{TemplateBinding Background}" 
                                            Height="35">

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="8"
                                                FontSize="18"
                                                Text="TESTAR CONEXÃO"/>

                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                </Button>

                <Button
                    x:Name="btnConfirm"
                    Grid.Column="1"
                    Background="{StaticResource ConfirmSolidColor}" 
                    Foreground="White"
                    Click="BtnConfirm_Click">

                    <Button.Style>
                        <Style  TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            CornerRadius="0,0,35,0"
                                            Background="{TemplateBinding Background}" 
                                            Height="35">

                                            <TextBlock
                                                Foreground="{TemplateBinding Foreground}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="8"
                                                FontSize="18"
                                                Text="CONFIRMAR"/>

                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    
                </Button>

            </Grid>
            
        </Grid>
        
        

    </Border>
</Window>

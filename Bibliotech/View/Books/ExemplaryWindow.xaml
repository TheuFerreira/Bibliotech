<Window x:Class="Bibliotech.View.Books.ExemplaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotech.View.Books"
        xmlns:uc="clr-namespace:Bibliotech.UserControls"
        xmlns:converters="clr-namespace:Bibliotech.Converters"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Icon="/Bibliotech;component/Resources/ico_bibliotech.ico"
        Title="Exemplares" Height="720" Width="1280">
    <Window.Resources>
        <converters:EnumValueConverter x:Key="EnumConverter"/>
    </Window.Resources>
    <Grid>

        <uc:ComboBoxSearchField
            x:Name="searchField"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Placeholder="PESQUISAR EXEMPLARES"
            BorderBrush="Transparent"
            VerticalAlignment="Top"
            Width="450"/>

        <uc:CustomComboBox
            Margin="0,5,50,0"
            Title="FILTRAR:"
            Width="200"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"/>

        <DataGrid
            x:Name="dataGrid"
            Margin="0,87,0,143"
            ItemsSource="{Binding}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nº" Width="50" Binding="{Binding Path=IdIndex,StringFormat={}{0:0º}}"/>
                <DataGridTextColumn Header="TÍTULO" Width="*" Binding="{Binding Path=Book.Title}"/>
                <DataGridTextColumn Header="ESCOLA" Width="*" Binding="{Binding Path=Branch.Name}"/>
                <DataGridTextColumn Header="AUTOR(ES)" Width="*" Binding="{Binding Path=Book.Author.Name}"/>
                <DataGridTextColumn Header="STATUS" Width="100" Binding="{Binding Path=Status, Converter={StaticResource EnumConverter}}"/>
                <DataGridTextColumn Header="" Width="50" Binding="{Binding Path=icon}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Grid 
                                            x:Name="grid">
                                            
                                            <Image
                                                Width="25" 
                                                Height="25" 
                                                Source="/Bibliotech;component/Resources/img_print.png"/>
                                        </Grid>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid
            Margin="30,0,30,10"
            Height="110"
            VerticalAlignment="Bottom">

            <uc:ButtonImage
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Source="/Bibliotech;component/Resources/img_lost.png"
                Text="EXTRAVIOU"/>

            <uc:ButtonImage
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Source="/Bibliotech;component/Resources/img_add.png"
                Text="NOVO"
                Margin="364,0,708,0"/>

            <uc:ButtonImage
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Text="IMPRIMIR"
                Source="/Bibliotech;component/Resources/img_print.png"
                Margin="750,0,322,0"/>

            <uc:ButtonImage
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Source="/Bibliotech;component/Resources/img_delete.png"
                Text="DELETAR"/>
        </Grid>
    </Grid>
</Window>

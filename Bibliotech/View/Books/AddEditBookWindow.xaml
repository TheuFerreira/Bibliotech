<Window x:Class="Bibliotech.View.Books.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotech.View.Books"
        xmlns:uc="clr-namespace:Bibliotech.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="/Bibliotech;component/Resources/ico_bibliotech.ico"
        Title="AddEditBookWindow" Height="469" Width="890" ResizeMode="NoResize">
    <Grid>

        <TextBlock 
            x:Name="tbInfo"
            Margin="0,10"
            FontSize="25"
            Text="ADICIONAR/EDITAR LIVRO"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"/>

        <Grid 
            x:Name="gridFields"
            Margin="20,54,20,0"
            VerticalAlignment="Top">

            <Grid
                VerticalAlignment="Top"
                Margin="10">

                <uc:TextField 
                    x:Name="tfTitle"
                    MaxLength="200"
                    Title="TÍTULO:*"
                    Placeholder="INSIRA O TÍTULO" HorizontalAlignment="Right" Width="363"/>

                <uc:TextField 
                    x:Name="tfAuthor"
                    MaxLength="200"
                    Title="AUTOR(ES):*"
                    Placeholder="AUTOR"
                    HorizontalAlignment="Left" 
                    IsEnabled="False"
                    Width="295" Margin="0,-3,0,3" RenderTransformOrigin="0.5,0.5"/>

                <uc:Button
                    x:Name="bntAddAuthor"
                    Margin="306,0,0,0"
                    Height="30"
                    VerticalAlignment="Bottom"
                    Text="PESQUISAR"
                    CornerRadius="15"
                    Source="/Bibliotech;component/Resources/img_zoom.png"
                    MarginImage="7,5" Click="BtnAddAuthor_Click" 
                    SnapsToDevicePixels="True" FontSize="11" 
                    HorizontalAlignment="Left" Width="127"/>
            </Grid>

            <Grid
                VerticalAlignment="Top"
                Margin="10,81,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="169*"/>
                    <ColumnDefinition Width="37*"/>
                </Grid.ColumnDefinitions>

                <uc:TextField 
                    x:Name="tfGender"
                    MaxLength="50"
                    Title="GÊNERO:"
                    Placeholder="GÊNERO"
                    HorizontalAlignment="Right"
                    Width="175" 
                    Margin="0,3,1,-3" Grid.ColumnSpan="2"/>

                <uc:TextField 
                    x:Name="tfEdition"
                    MaxLength="50"
                    Title="EDIÇÃO:"
                    Placeholder="EDIÇÃO"
                    HorizontalAlignment="Right"
                    Width="166" 
                    Margin="0,3,51,-3"/>
                
                <uc:TextField 
                    x:Name="tfSubtitle"
                    MaxLength="200"
                    Margin="-1,3,0,-3"
                    Title="SUBTÍTULO:*"
                    Placeholder="INSIRA O SUBTÍTULO"
                    HorizontalAlignment="Left"
                    Width="229"/>
                
                <uc:TextField 
                    x:Name="tfPublishingCompany"
                    MaxLength="50"
                    HorizontalAlignment="Left"
                    Width="183"
                    Title="EDITORA:*"
                    Placeholder="EDITORA" Margin="252,3,0,-3"/>

            </Grid>

            <Grid
                VerticalAlignment="Top"
                Margin="10,160,10,-4">

                <uc:TextField 
                    x:Name="tfVolume"
                    MaxLength="50"
                    Title="VOLUME:"
                    Placeholder="VOLUME"
                    HorizontalAlignment="Left" 
                    Width="105" Margin="124,0,0,0"/>

                <uc:TextField 
                    x:Name="tfColletion"
                    MaxLength="50"
                    VerticalAlignment="Top"
                    Title="COLEÇÃO:"
                    Placeholder="COLEÇÃO" 
                    Margin="252,0,0,0" HorizontalAlignment="Left" Width="183"/>
                
                <uc:TextField 
                    x:Name="tfNumberPages"
                    VerticalAlignment="Top"
                    MaxLength="5"
                    FieldType="Number"
                    Title="Nº DE PÁGINAS:"
                    Placeholder="555" 
                    HorizontalAlignment="Left" 
                    Width="105" Margin="0,1,0,-1" />
                
                <uc:TextField 
                    x:Name="tfYear"
                    MaxLength="4"
                    Title="ANO DE PUBLICAÇÃO:"
                    Placeholder="2021"
                    FieldType="Number" Margin="0,1,198,-1" HorizontalAlignment="Right" Width="166"/>
                
                <uc:TextField 
                    x:Name="tfLanguage"
                    MaxLength="50"
                    Title="IDIOMA:"
                    Placeholder="PORTUGUÊS"
                    HorizontalAlignment="Right" 
                    Margin="0,1,1,-1" 
                    Width="175"/>

            </Grid>

            <Grid
                VerticalAlignment="Top"
                Margin="10,190,0,0" HorizontalAlignment="Left" Width="824"/>

        </Grid>

        <Grid
            Margin="30,0,0,30"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">

            <uc:Button
                x:Name="btnExemplaries"
                Source="/Bibliotech;component/Resources/img_zoom.png"
                VerticalAlignment="Bottom"
                Height="30"
                MarginImage="10,3,0,3"
                Width="200"
                CornerRadius="15"
                FontSize="16"
                Text="EXEMPLARES" Click="BtnExemplaryBook_Click" Margin="0,-12,0,12"/>
        </Grid>

        <uc:ButtonImage 
            x:Name="btnSave"
            Text="SALVAR"
            Width="140"
            Height="110"
            Margin="10"
            Source="/Bibliotech;component/Resources/img_save.png"
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom" 
            OnClick="BtnSave_OnClick"/>
        
    </Grid>
</Window>

<Window x:Class="Bibliotech.View.Schools.SchoolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotech.View.Schools"
        xmlns:uc="clr-namespace:Bibliotech.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SchoolsWindow" Height="720" Width="1280">
    <Grid>
        <uc:ComboBoxSearchField
            x:Name="searchField"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="450"/>

        <DataGrid x:Name="schoolGrid"
            Margin="0,60,0,130" IsSynchronizedWithCurrentItem="True" Loaded="SchoolGrid_Loaded" FontSize="14">

            <DataGrid.Columns>
                <DataGridTextColumn Visibility="Hidden" Header="Id"/>
                <DataGridTextColumn Header="NOME" Width="*" FontSize="14" HeaderStringFormat="name"/>
                <DataGridTextColumn Header="TELEFONE" MinWidth="125"/>
                <DataGridTextColumn Header="ENDEREÇO" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid
            Margin="30,0,30,10"
            Height="110"
            VerticalAlignment="Bottom">

            <uc:ButtonImage
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Text="EDITAR"/>

            <uc:ButtonImage
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Text="NOVO"/>

            <uc:ButtonImage
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Text="ATIVAR/DESATIVAR" OnClick="ButtonImage_OnClick"/>
        </Grid>
        <uc:Button HorizontalAlignment="Left" Height="23" Margin="899,24,0,0" VerticalAlignment="Top" Width="56" Background="Black" MouseDown="Button_MouseDown"/>
    </Grid>
</Window>
